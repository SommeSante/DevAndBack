<odoo>
	<data>

		<record id="view_pop_up_wizard_form" model="ir.ui.view">
			<field name="name">sale.order.popup.form</field>
			<field name="model">sale.order.popup</field>
			<field name="arch" type="xml">
				<form string="Pop Up">
					<p>
						<span style="font-size: 16px;">
							Los pedidos seleccionados ser√°n marcados como Facturado y se le actualizara el numero de factura <br/>
						</span>
					</p>
					<group>
						<field name="invoice_number"/>
					</group>
					<footer>
						<button class="oe_highlight"
						        type="object"
						        name="update_sale_order"
						        string="Actualizar Pedidos"
						/>
						or
						<button string="Cancel" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

